{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "module": "commonJS",
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@bigbinary/neetoui/*": ["*"],
      "hooks/*": ["lib/hooks/*"],
      "hooks": ["lib/hooks"],
      "utils/*": ["lib/utils/*"],
      "utils": ["lib/utils"],
      "constants/*": ["lib/constants/*"],
      "constants": ["lib/constants"],
    },
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": ["build", "node_modules", "storybook-static"],
  "include": ["./**/*.js", "./**/*.jsx"]
}
